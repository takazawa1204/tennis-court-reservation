<div class="container user-edit">
  <div class="row">
    <div class="col-md-3">
      <h1>ユーザー編集</h1>
    </div>
  </div>
  <hr class='divider'>
  <%= form_with model:@user, local:true do |f| %>
    <div class="row">
      <div class="col-md-3">
        <p>名前:  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%></p>
      </div>
    </div>
    <div class="row">
      <div class="col-md-3">
        <p>メールアドレス:  <%= f.text_field :email, autofocus: true, id:"inputName", placeholder:"メール"%></p>
      </div>
    </div>
    <div class="row">
      <div class="col-md-3">
        <p>レベル:  <%= f.number_field :level, autofocus: true, id:"inputName", placeholder:"レベル"%></p>
      </div>
      <div class="col-md-1">
        <%= button_tag :type => "submit", :class =>"btn btn-default btn-s-md" do %>
          <i class="fa fa-save fa-2x"></i>
        <% end %>
      </div>
    </div>
  <% end %>
</div>