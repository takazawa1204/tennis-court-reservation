<h2>ユーザー登録</h2>

<%= form_with model: @user, url: users_path, local: true do |f| %>
  <%= render "layouts/error_messages", user: @user %>
  
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "password" %>
  </div>
  
  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "password" %>
  </div>

  <div class="actions">
    <%= f.submit "登録" %>
  </div>
<% end %>