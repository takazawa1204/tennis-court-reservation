<div class="container mypage">
  <div class="row">
    <div class="col-md-3">
      <h1>マイページ</h1>
    </div>
  </div>
  <hr class='divider'>
  <h3 class="mt-3">プロフィール</h3>
  <div class="row">
    <div class="col-md-3">
      <p>名前:<%= @user.name %></p>
    </div>
  </div>
  <div class="row">
    <div class="col-md-3">
      <p>メールアドレス:<%= @user.email %></p>
    </div>
  </div>
  <div class="row">
    <div class="col-md-3">
      <p>レベル:<%= @user.level %></p>
    </div>
    <div class="col-md-1">
      <%= link_to '編集する', edit_user_path(@user), class:"" %>
    </div>
  </div>
  <h3 class="mt-3">予約日</h3>
  <% @user.reservations.each do |reservation| %>
  <div class="row">
    <div class="col-md-3">
      <p><%= link_to reservation.reservation_day, reservation_path(reservation) %> <%= reservation.reservation_time %></p>
    </div>
  </div>
  <% end %>
</div>